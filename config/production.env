# Production Environment Configuration  
# Use on Raspberry Pi

# Server Configuration
WHISPER_MODEL=small.en
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8765

# Audio Configuration
SAMPLE_RATE=16000
CHANNELS=1
VAD_AGGRESSIVENESS=2

# Performance Settings (Pi 5 optimized)
MAX_RECORDING_SECONDS=30
PROCESSING_TIMEOUT=15
OPTIMIZE_FOR_PI=true
OMP_NUM_THREADS=4
MKL_NUM_THREADS=4

# Client Configuration (Update with actual Pi IP)
PI_SERVER_URL=ws://192.168.1.100:8765
RETRY_ATTEMPTS=3
RETRY_DELAY=1.0

# Recording Control
HOTKEY_PRIMARY=space
HOTKEY_LOCK=fn+space
TEXT_INSERTION_METHOD=accessibility_api

# Production Settings
USE_MOCK_SERVER=false
ENABLE_DEBUG_LOGGING=false 